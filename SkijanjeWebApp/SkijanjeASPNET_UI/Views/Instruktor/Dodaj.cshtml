@using SkijanjeASPNET.Models
@using SkijanjeLibrary.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var spolovi = (string[])ViewData["spolovi"];
}

@model InstruktorVM


<form id="instruktorDodaj" asp-action="Snimi" enctype="multipart/form-data">
  <div class="form-group">
    <label for="ime">Ime</label>
    <input id="ime" name="ime" asp-for="InstruktorDodaj.Ime" class="form-control" type="text">
  </div>
   <div class="form-group">
    <label for="prezime">Prezime</label>
    <input id="prezime" name="prezime" asp-for="InstruktorDodaj.Prezime" class="form-control" type="text">
  </div>
    <div class="form-group">
    <label for="datRodj">Datum rođenja</label>
    <input id="datRodj" name="datRodj" asp-for="InstruktorDodaj.DatRodj" class="form-control" type="date">
  </div>
    <div class="form-group">
    <label for="spol">Spol</label>
   <select id="spol" name="spol" asp-for="InstruktorDodaj.Spol" class="form-control">
       @foreach(string i in Model.Spolovi)
            {
                <option value="@i">@i</option>
            }
        </select>
  </div>
  <div class="form-group">
    <label for="kontaktTel">Kontakt telefon</label>
  <input id="kontaktTel" name="kontaktTel" asp-for="InstruktorDodaj.KontaktTel" class="form-control" type="tel"/>
  </div>
  <div class="form-group">
    <label for="skijIsk">Skijaško iskustvo</label>
    <input id="skijIsk" name="skijIsk" asp-for="InstruktorDodaj.SkijIsk" class="form-control" type="date">
  </div>

  <div class="form-group">
    <label for="biografija">Biografija</label>
    <textarea id="bio" name="bio" asp-for="InstruktorDodaj.Biografija" class="form-control"></textarea>
  </div>

  <div class="form-group">
    <label for="cv">Curriculum Vitae</label>
    <input id="cv" name="cv" asp-for="InstruktorDodaj.Cv" class="form-control">
  </div>

 

  <button type="submit" class="btn btn-primary">Spasi</button>
</form>
